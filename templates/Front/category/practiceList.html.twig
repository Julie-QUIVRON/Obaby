{% extends 'base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/hub-category.css') }}"/>

{% endblock %}

{% block title %}<h1 class="text-center">Choisissez une catégorie</h1>{% endblock %}

{% block body %}
    <!-- Main Content Start -->
<main class="container-fluid row m-auto">

    <content class="text-center d-flex flex-column align-items-center">

   <div class="container-xxl py-5 ">
    <div class="container">

      
      <div class="row g-3 category-container">

{#         <div class="col-lg-6 col-sm-6">
          <a href="" class="main-buttons-item btn-healthcare">
              <div class="main-buttons-icon">
                <i class="fa-solid fa-person-pregnant fa-3x"></i>
              </div>
              <div class="main-buttons-text">
                <h3 class="mb-3">Grossesse</h3>
              </div>
          </a>
        </div> #}

        {% for category in categories %}
        <div class="col-lg-6 col-sm-6 d-flex m-auto mb-2 mt-0">
          <a href="{{ path('practice_list', {id: category.id}) }}" class="main-buttons-item btn-{{category.name}}">
            <div class="main-buttons-text">

            {% if category.name == 'Sécurité' %}
              <i class="fas fa-lock fa-3x"></i>
            {% elseif category.name == 'Loisir' %}
              <i class="fa-solid fa-puzzle-piece fa-3x"></i>
            {% elseif category.name == 'Grossesse' %}
              <i class="fa-solid fa-person-pregnant fa-3x"></i>
            {% elseif category.name == 'Nutrition' %}
              <i class="fa-solid fa-cookie-bite fa-3x"></i>
            {% elseif category.name == 'Santé' %}
              <i class="fa-solid fa-briefcase-medical fa-3x"></i>
            {% endif %}
            
              <h3 class="mb-3">{{category.name}}</h3>
            </div>
          </a>
        </div>
        {% endfor %}


      </div>
    </div>
  </div>


    </content>

{% endblock %}

