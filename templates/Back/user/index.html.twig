{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block navbar %}
	{% include '/Back/partials/_nav_back.html.twig' %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/homeBack.css') }}"/>
{% endblock %}

{% block body %}

	<h1 class="text-center">Liste des utilisateurs</h1>

	<section class="row">
		<div class="col-sm-12 col-md-12 col-lg-8 mb-5 m-auto">
		<div class="table-back">
			<table class="table table-hover">
				<thead class="table-thead">
					<tr>
						<th scope="col" class="thead-start text-white text-center">Id</th>
						<th scope="col" class="text-white text-center">Email</th>
						<th scope="col" class="text-white text-center">
						<th scope="col" class="text-white text-center">Pseudo</th>
						<th scope="col" class="text-white text-center">Status</th>
						<th scope="col" class="text-white text-center">Editer</th>
						<th scope="col" class="thead-end text-white text-center">Supprimer</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<th scope="row">{{ user.id }}</th>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ user.pseudo }}</td>
							<td>{{ user.status }}</td>
							<td>
								<a class="d-flex justify-content-center" href="{{ path('back_user_update', {'id': user.id}) }}">
                                    <button class="btn btn-warning">Editer</button>
                                </a>							
							</td>
                            <td>
								{{ include('Back/user/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7">L'information n'a pas été trouvée</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<a class="btn btn-primary col-11 mx-4" href="{{ path('back_home') }}">Revenez à l'accueil</a>
</div>

	</section>


{% endblock %}
{% block footer %}<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>{% endblock %}