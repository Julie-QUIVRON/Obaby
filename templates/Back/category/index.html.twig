{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block navbar %}{% include '/Back/partials/_nav_back.html.twig' %}{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des catégories</h1>

	<section class="row">
		<div class="col-sm-12 col-md-12 col-lg-8 mb-5 m-auto">
			<table class="table table-hover">
				<thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Editer</th>
				<th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <th scope="row">{{ category.id }}</th>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('back_category_update', {'id': category.id}) }}">Editer</a>
                </td>
                <td>
                    {% include "Back/category/_delete_form.html.twig" %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">L'information n'a pas été trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary col-12" href="{{ path('back_home') }}">
				Revenez à l'accueil</a>
		</div>

	</section>


{% endblock %}

