{% extends 'base.html.twig' %}

{% block title %}Practice index{% endblock %}

{% block body %}
{% include '/Back/partials/_nav_back.html.twig' %}
 
    <h1 class="text-center">Liste des bonnes pratiques</h1>

        <section class="row">
            <div class="col-sm-12 col-md-12 col-lg-8 mb-5 m-auto">
                <table class="table table-hover">
                    <thead class="table-dark">
                  <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Date de création</th>
                <th scope="col">Date de mise à jour</th>
                <th scope="col">Status</th>
                <th scope="col">Visualiser</th>
                <th scope="col">Editer</th>
                <th scope="col">Supprimer</th>

                </tr>
            </thead>
        <tbody>
        {% for practice in practices %}
            <tr>
                <th scope="row">{{ practice.id }}</th>
                <td>{{ practice.title }}</td>
                <td>{{ practice.content }}</td>
                <td>{{ practice.createdAt ? practice.createdAt|date('d-m-Y') : '' }}</td>
                <td>{{ practice.updatedAt ? practice.updatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ practice.status }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('back_practice_show', {'id': practice.id}) }}">Voir</a>
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('back_practice_update', {'id': practice.id}) }}">Editer</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('back_practice_delete', {'id': practice.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
              </table>
              <a  class="btn btn-primary col-12" href="{{ path('back_home') }}"> Revenir à l'acceuil</a>
        </div>

    </section>


{% endblock %}
