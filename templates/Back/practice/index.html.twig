    <h1 class="text-center">Liste des bonnes pratiques</h1>

        <section class="row">
            <div class="col-sm-12 col-md-12 col-lg-8 mb-5 m-auto">
                <table class="table table-hover">
                    <thead class="table-dark">
                  <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">UpdatedAt</th>
                <th scope="col">Status</th>
                <th scope="col">actions</th>
                </tr>
            </thead>
        <tbody>
        {% for practice in practices %}
            <tr>
                <th scope="row">{{ practice.id }}</th>
                <td>{{ practice.title }}</td>
                <td>{{ practice.content }}</td>
                <td>{{ practice.createdAt ? practice.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ practice.updatedAt ? practice.updatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ practice.status }}</td>
                <td>
                    <a href="{{ path('back_practice_show', {'id': practice.id}) }}">show</a>
                    <a href="{{ path('back_practice_update', {'id': practice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
              </table>
