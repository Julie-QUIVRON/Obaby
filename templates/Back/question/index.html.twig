{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block navbar %}{% include '/Back/partials/_nav_back.html.twig' %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/homeBack.css') }}"/>
{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des questions</h1>

    <section class="row">
		<div class="col-sm-12 col-md-12 col-lg-8 mb-5 m-auto">
		<div class="table-back">
			<table class="table table-hover">
				<thead class="table-thead">
					<tr>
                            <th scope="col" class="thead-start text-white text-center">Id</th>
                            <th scope="col" class="text-white text-center">Question</th>
                            <th scope="col" class="text-white text-center">Date de création</th>
                            <th scope="col" class="text-white text-center">Catégorie</th>
                            <th scope="col" class="text-white text-center">Status</th>
                            <th scope="col" class="text-white text-center">Valider</th>
                            <th scope="col" class="text-white text-center">Editer</th>
                            <th scope="col" class="thead-end text-white text-center">Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for question in questions %}
                        <tr>
                            <td>{{ question.id }}</td>
                            <td>{{ question.content }}</td>
                            <td>{{ question.createdAt ? question.createdAt|date('Y-m-d') : '' }}</td>
                            <td>{{ question.category.name }}</td>
                            <td>{{ question.status }}</td>
                            <td> 
                                <form class= "d-flex justify-content-center" action="{{ path('back_question_validate', {'id': question.id}) }}" method="post">
                                    <button class="btn btn-warning ">Valider</button>
                                </form>
                            </td>
                            <td>
                                <a class="btn btn-warning d-flex justify-content-center" href="{{ path('back_question_update', {'id': question.id}) }}">Editer</a>
                            </td>
                                <td class= "d-flex justify-content-center"> 
                                {{ include('Back/question/_delete_form.html.twig') }}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5">Pas de données trouvées</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a  class="btn btn-primary col-11 mx-4" href="{{ path('back_home') }}"> Revenez à l'accueil</a>
            </div>
        </section>
{% endblock %}
{% block footer %}<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>{% endblock %}
