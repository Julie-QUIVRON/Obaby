{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block navbar %}{% include '/Back/partials/_nav_back.html.twig' %}{% endblock %}

{% block stylesheets %}
    
    <link rel="stylesheet" href="{{ asset('css/backStyle.css') }}"/>
{% endblock %}

{% block body %}
<button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fa-solid fa-arrow-up"></i></button>


    <h1 class="text-center">Liste des questions</h1>

    <section class="row display-lg">
		<div class="col-sm-12 col-md-12 col-lg-8 mb-5 m-auto">
		<div class="table-back">
			<table class="table table-hover display-lg">
				<thead class="table-thead">
					<tr>
                            <th scope="col" class="thead-start text-white">Id</th>
                            <th scope="col" class="text-white">Question</th>
                            <th scope="col" class="text-white">Date de création</th>
                            <th scope="col" class="text-white">Catégorie</th>
                            <th scope="col" class="text-white">Status</th>
                            <th scope="col" class="text-white">Valider</th>
                            <th scope="col" class="text-white">Editer</th>
                            <th scope="col" class="thead-end text-white">Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for question in questions %}
                        <tr>
                            <td>{{ question.id }}</td>
                            <td>{{ question.content }}</td>

                            <td>{{ question.createdAt ? question.createdAt|date("d/m/Y") : '' }}</td>

                            <td>{{ question.category.name }}</td>
                            		{% if question.status == 1 %}
										<td class="bg-success text-center">
											<p>Publié</p>
										</td>
									{% else %}
										<td class="bg-warning text-center">
											<p>A Modérer</p>
										</td>
									{% endif %}
                            <td> 
                            {% if question.status == 0 %}
                                <form class= "d-flex justify-content-center" action="{{ path('back_question_validate', {'id': question.id}) }}" method="post">
                                    <button class="btn btn-success ">Valider</button>
                                </form>
                            </td>
                            {% else %}
								
							{% endif %}
                            <td>
                                    <a class="d-flex justify-content-center" href="{{ path('back_question_update', {'id': question.id}) }}">
                                        <button class="btn btn-warning">Editer</button>
                                    </a>
                            </td>
                                <td class= "d-flex justify-content-center"> 
                                {{ include('Back/question/_delete_form.html.twig') }}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5">L'information n'a pas été trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a  class="btn btn-primary col-11 mx-4" href="{{ path('back_home') }}"> Revenir à l'accueil</a>
            </div>
        </section>

		{# table display MD #}
		<section class="row display-md">
			<div class="col-sm-12 col-md-12 col-lg-12 mb-5 m-auto">
			<div class="table-back display-md">
				<table class="table table-hover">

				{% for question in questions %}
					<thead class="table-thead">
						<tr>
								<th scope="col" class="thead-start bg-secondary text-white">Id : {{ question.id }}</th>
								<th scope="col">Question : {{ question.content }}</th>
						</tr>
					</thead>
					<tbody>
							<tr>
								<td class="bg-secondary text-white">Date de création</td>
								<td>{{ question.createdAt ? question.createdAt|date('Y-m-d') : '' }}</td>
							</tr>
							<tr>
								<td class="bg-secondary text-white">Catégorie</td>
								<td>{{ question.category.name }}</td>
							</tr>
							<tr>
								<td class="bg-secondary text-white">Statut</td>
								<td>{{ question.status }}</td>
							</tr>
							<tr>
								<td class="bg-secondary text-white">Modération</td>
								<td class="d-flex justify-content-around">
									<span>
										<form class= "d-flex justify-content-center" action="{{ path('back_question_validate', {'id': question.id}) }}" method="post">
                                   			<button class="btn btn-success ">Valider</button>
                                		</form>
									</span>
									<span>
										<a class="d-flex justify-content-center" href="{{ path('back_question_update', {'id': question.id}) }}">
                                        	<button class="btn btn-warning">Editer</button>
                                    	</a>
									</span>
									<span class= "d-flex justify-content-center"> 
                                		{{ include('Back/question/_delete_form.html.twig') }}
									</span>
								</td>
							</tr>
							<tr>
								<td colspan="3" class="bg-primary"></td>
							</tr>
							{% else %}
							<tr>
								<td colspan="5">L'information n'a pas été trouvée</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
					<a  class="btn btn-primary col-11 mx-4" href="{{ path('back_home') }}"> Revenir à l'accueil</a>
				</div>
			</section>
{% endblock %}

{% block footer %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('js/scrollTopBtn.js') }}"></script>

{% endblock %}